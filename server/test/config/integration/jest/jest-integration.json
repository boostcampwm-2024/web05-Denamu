{
  "moduleFileExtensions": ["js", "json", "ts"],
  "testEnvironment": "node",
  "rootDir": "../../../",
  "testRegex": "test/.*\\.(e2e-spec|spec).ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "coverageDirectory": "test/coverage",
  "setupFilesAfterEnv": ["./config/e2e/env/jest.setup.ts"],
  "globalSetup": "./config/e2e/global/e2e-test-global-setup.ts",
  "globalTeardown": "./config/e2e/global/e2e-test-global-teardown.ts",
  "maxWorkers": 1,
  "testTimeout": 20000
}
